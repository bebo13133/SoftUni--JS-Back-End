

        <main>

            <section id="home-page">
                <article class="auto-content">
                    <h1>NEWS OF OUR</h1>
                    <h2>ART GALLERY</h2>
                </article>
            </section>

            <section id="home-page-content">
                <h1>Statistics of shared publication</h1>
                <article class="home-page-content-publications">

                    <!--If there are publications in the database, show the following view for each created publication-->
                    {{#if arts}}
                    {{#each arts}}
                    <article class="content-publication">
                        <h1>Title: {{title}}</h1>

                        <!--If no one has shared the post yet, the number should be zero -->
                        <p>Number of people shared the publication: {{shared.length}}</p>
                        <a href="/arts/{{_id}}/details" class="image-details">View publication</a>
                    </article>

                        {{/each}}
                    {{else}}
                    
                    <article class="no-publication">
                        <h1>There are no publications yet.</h1>
                        <a href="/arts/catalog" class="view-gallery">View Gallery</a>
                    </article>
                </article>
                    {{/if}}
            </section>

        </main>
