


        <main>
            <section id="my-posts">
                 {{#if posts}}
                <h1>My post</h1>
                 
                <div class="my-container">
                   {{#each posts}}
                    <div class="my-card">
                        <div class="card-header">
                            <img src="{{image}}"/>
                        </div>
                        <div class="card-body">
                            <span class="tag tag-teal">Species: {{species}}</span>
                            <h4>
                                Name: {{name}}
                            </h4>
                            <div class="user">
                                <div class="user-info">
                              
                                    <h5>Author: {{author}} </h5>
                           
                                    <small>Rating of votes: {{votes.length}}</small>
                                    <a href="/posts/{{_id}}/details" class="details_btn">Details</a>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                        {{else}}
                   
                     <div class="no-posts">
                        <p class="no-offer">There are no own posts yet...</p>
                    </div>
                    {{/if}}
                </div>
            </section>

        </main>
