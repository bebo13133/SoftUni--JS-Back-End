
        <section id="viewhotelDetails">
            <h2>Details</h2>
            <div class="hotel-ticket">
                <div class="hotel-left">
                    <img src="{{hotel.image}}"
                        alt="{{hotel.name}}">
                </div>
                <div class="hotel-right">
                    <div>
                        <h3>{{hotel.name}}</h3>
                    </div>
                    <div>
                        {{hotel.city}}
                    </div>
                    <p><span >Free rooms: {{freeRooms}}</span> </p>
                    {{#unless isOwner}}
                    {{#if hotel.alreadyBooking}}
                    <p><span class="green">You already have booked a room</span> </p>
                    {{else}}
                    <a href="/hotels/{{hotel._id}}/booked" class="book">Book</a>
                    {{/if}}

                    {{/unless}}

                    {{#if isOwner}}
                    <a href="/hotels/{{hotel._id}}/edit" class="edit">Edit</a>
                    <a href="/hotels/{{hotel._id}}/delete" class="remove">Delete</a>
                    {{/if}}
                </div>

            </div>
        </section>
